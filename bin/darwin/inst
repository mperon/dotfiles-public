inst_config_gpg() {
    [[ -n "$XDG_DATA_HOME" ]] && mkdir -p $XDG_DATA_HOME/gnupg \
    && chown $(whoami) $XDG_DATA_HOME/gnupg \
    && chmod 700 $XDG_DATA_HOME/gnupg \
    && chmod 600 $XDG_DATA_HOME/gnupg/*
}

