{
    // ===
    // Editor
    // ===
    "editor.trimAutoWhitespace": true,
    "autoDocstring.docstringFormat": "google",
    "breadcrumbs.enabled": true,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "languageDefined",
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "JetBrainsMonoNerdFontCompleteM-Light, 'JetBrains Mono', 'Fira Code', Monaco, 'Cascadia Code', Consolas, monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 18,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.quickSuggestionsDelay": 0,
    "editor.renderControlCharacters": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 100],
    "editor.smoothScrolling": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrapColumn": 100,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": false
    },

    "emmet.includeLanguages": {
        //    "javascript": "javascriptreact",
        "markdown": "html",
        "vue-html": "html"
    },
    "emmet.triggerExpansionOnTab": false,
    // ===
    // Linters
    // ===
    "eslint.enable": false,
    "eslint.packageManager": "yarn",
    "eslint.format.enable": false,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue",
        "vue-html",
        "html"
    ],

    // ===
    // UI
    // ===
    "explorer.autoReveal": true,
    "explorer.confirmDelete": false,
    "extensions.autoUpdate": true,
    "problems.decorations.enabled": false,
    "redhat.telemetry.enabled": false,
    "telemetry.telemetryLevel": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "window.title": "${activeEditorLong}",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "terminalCursor.foreground": "#00ffaa"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.openMode": "doubleClick",
    "workbench.sideBar.location": "right",
    "workbench.editor.untitled.hint": "hidden",
    // ===
    // Files
    // ===
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.erb": "erb",
        ".markdownlintrc": "jsonc"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.eol": "\n",
    "files.exclude": {
        "**/__pycache__": true,
        "**/_site": true,
        "**/._*": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/.venv": true,
        "**/*.asset-cache": true,
        "**/*.cache": true,
        "**/*.coverage": true,
        "**/*.egg-info": true,
        "**/*.jekyll-cache": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/*.tweet-cache": true,
        "**/bower_components": true,
        "**/celerybeat-schedule": true,
        "**/CVS": true,
        "**/node_modules": true,
        "**/tmp": true,
        "**/venv": true,
        "**/*.log": true,
        "**/*.log*": true,
        "**/coverage": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/__pycache__": true,
        "**/_site": true,
        "**/._*": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/.venv": true,
        "**/*.asset-cache": true,
        "**/*.cache": true,
        "**/*.coverage": true,
        "**/*.egg-info": true,
        "**/*.jekyll-cache": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/*.tweet-cache": true,
        "**/bower_components": true,
        "**/celerybeat-schedule": true,
        "**/CVS": true,
        "**/node_modules": true,
        "**/tmp": true,
        "**/venv": true,
        "**/*.log": true,
        "**/*.log*": true,
        "**/coverage": true
    },
    // ===
    // Git
    // ===
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.ignoreMissingGitWarning": true,
    "diffEditor.ignoreTrimWhitespace": false,

    // ===
    // HTML
    // ===
    "html.autoClosingTags": true,
    "html.format.enable": false,
    "html.format.wrapLineLength": 100,
    "htmlhint.options": {
        "doctype-first": false
    },

    // ===
    // JS(ON)
    // ===
    "json.format.enable": false,
    "javascript.format.enable": false,
    "javascript.autoClosingTags": true,
    "javascript.suggest.autoImports": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.validate.enable": false,

    // ===
    // CSS
    // ===
    "stylelint.enable": false,
    "css.validate": true,
    "scss.validate": true,

    // ===
    // TypeScript
    // ===
    "typescript.format.enable": true,
    "typescript.autoClosingTags": true,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    // ===
    // Python
    // ===
    "python.languageServer": "Pylance",
    "python.envFile": "${workspaceFolder}/.env",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=100"],
    "python.analysis.autoImportCompletions": true,
    "python.autoComplete.extraPaths": ["${workspaceFolder}/src"],
    "python.analysis.extraPaths": ["${workspaceFolder}/src"],
    "python.analysis.indexing": true,
    "python.analysis.packageIndexDepths": [
        { "name": "", "depth": 20, "includeAllSymbols": true }
    ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "instance/**",
        "setup/**",
        "**/site-packages/**/*.py"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 100,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--logging-format-style=new",
        "--disable=logging-fstring-interpolation"
    ],
    "python.terminal.activateEnvironment": false,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // ===
    // Prettier
    // ===
    "prettier.printWidth": 100,
    "prettier.arrowParens": "always",
    "prettier.bracketSpacing": true,
    "prettier.requireConfig": true,
    "prettier.htmlWhitespaceSensitivity": "strict",
    "prettier.bracketSameLine": true,
    "prettier.jsxSingleQuote": true,
    "prettier.proseWrap": "never",
    "prettier.singleQuote": false,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "prettier.useTabs": false,
    "prettier.vueIndentScriptAndStyle": false,

    // ===
    // Terminal
    // ===
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "JetBrainsMonoNerdFontCompleteM-Light, 'JetBrains Mono', 'Fira Code', Monaco, 'Cascadia Code', Consolas, monospace",
    "terminal.integrated.fontSize": 14.5,
    "terminal.integrated.lineHeight": 1.3,
    //OSX
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.env.osx": {
        "FIND_VIRTUALENV": "1"
    },
    //Linux
    "terminal.integrated.env.linux": {
        "FIND_VIRTUALENV": "1"
    },

    //Windows
    "terminal.integrated.defaultProfile.windows": "WSL Bash",
    "terminal.integrated.profiles.windows": {
        "WSL Bash": {
            "path": "C:\\Windows\\System32\\bash.exe",
            "args": []
        }
    },
    "terminal.integrated.env.windows": {
        "FIND_VIRTUALENV": "1",
        "CHERE_INVOKING": "1"
    },
    "terminal.external.windowsExec": "C:\\Windows\\System32\\bash.exe",
    "[http]": {
        "editor.quickSuggestions": {
            "comments": false,
            "other": true,
            "strings": true
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //"editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //"editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //"editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //"editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        //"editor.defaultFormatter": "vscode.json-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[java]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[svelte]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[php]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[sass]": {
        "editor.defaultFormatter": "syler.sass-indented"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[less]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[log]": {
        "editor.fontSize": 14.5
    },
    "[makefile]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
            "source.lintOnSave": true
        },
        "editor.defaultFormatter": "ms-python.python"
    },
    "[yaml]": {
        "editor.autoIndent": "none",
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.suggest.insertMode": "replace",
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vite.autoStart": false,
    "window.commandCenter": true,
    "git.openRepositoryInParentFolders": "always",
    "autoDocstring.startOnNewLine": true
}
