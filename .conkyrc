conky.config = {
	update_interval = 1,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	out_to_console = false,
	override_utf8_locale = true,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 32768,
	imlib_cache_size = 0,
	own_window = true,
    own_window_class = 'Conky',
    own_iwndow_transparent = yes,
	own_window_type = 'desktop',
	own_window_argb_visual = true,
	own_window_argb_value = 155,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	border_inner_margin = 8,
	border_outer_margin = 4,
    border_width = 1,
	xinerama_head = 3,
	gap_x = 8,
	gap_y = 0,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	use_xft = true,
	font = 'Monaco:size=12',
	xftalpha = 0.84,
	uppercase = false,
	default_color = 'white',
	own_window_colour = '#000000',
	minimum_width = 300,
	minimum_height = 0,
	alignment = 'top_right',
};
conky.text = [[
${voffset 33}${font sans-serif:bold:size=18}${alignc}${time %H:%M}${font}
${voffset 4}${alignc}${time %A %B %d, %Y}
${font}${voffset 4}${font sans-serif:bold:size=10}SYSTEM ${hr 2}
${font sans-serif:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime
File System: $alignr${fs_type}
Processes: $alignr ${execi 1000 ps aux | wc -l}

${font sans-serif:bold:size=10}CPU ${hr 2}
${font sans-serif:normal:size=8}${execi 1000 grep model /proc/cpuinfo | cut -d : -f2 | tail -1 | sed 's/\s//'} ${alignr} CPU: ${font :BOLD:size=8}${cpu cpu0}%${font :size=8}

${cpubar cpu1 6,290} $alignr ${cpu cpu1}%
${cpubar cpu2 6,290} $alignr ${cpu cpu2}%
${cpubar cpu3 6,290} $alignr ${cpu cpu3}%
${cpubar cpu4 6,290} $alignr ${cpu cpu4}%

${font sans-serif:bold:size=10}MEMORY ${hr 2}
${font sans-serif:normal:size=8}RAM $alignc $mem / $memmax $alignr $memperc%
$membar
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${font sans-serif:bold:size=10}DISK USAGE ${hr 2}
${font sans-serif:normal:size=8}SISTEMA $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
${font sans-serif:normal:size=8}ARQUIVOS $alignc ${fs_used /arq} / ${fs_size /arq} $alignr ${fs_used_perc /arq}%
${fs_bar /arq}

${font Ubuntu:bold:size=10}NETWORK ${hr 2}
${font sans-serif:normal:size=8}Local IPs:${alignr}External IP:
${font :BOLD:size=8}${execi 1000 ip -4 route get 8.8.8.8 | awk {'print $7'} | tr -d '\n' } ${alignr}${execi 1000 wget -q -O- http://ipecho.net/plain; echo }${font :size=8}
${if_existing /sys/class/net/wlp2s0/operstate up}${voffset -5}
${font sans-serif:normal:size=8}Down: ${downspeed wlp2s0}  ${alignr}Up: ${upspeed wlp2s0}
${color lightgray}${downspeedgraph wlp2s0 20,100 } ${alignr}${upspeedgraph wlp2s0 20,100 -t }$color
${endif}${if_existing /sys/class/net/enp15s0/operstate up}
${font sans-serif:normal:size=8}Down: ${downspeed enp15s0}  ${alignr}Up: ${upspeed enp15s0}
${color lightgray}${downspeedgraph enp15s0 20,100 } ${alignr}${upspeedgraph enp15s0 20,100 }$color
${endif}${if_existing /sys/class/net/enp1s0f0/operstate up}
${font sans-serif:normal:size=8}Down: ${downspeed enp1s0f0}  ${alignr}Up: ${upspeed enp1s0f0}
${color lightgray}${downspeedgraph enp1s0f0 20,100 } ${alignr}${upspeedgraph enp1s0f0 20,100 }$color
${endif}
${voffset -15}${font sans-serif:bold:size=10}TOP PROCESSES ${hr 2}
${font sans-serif:normal:size=8}Name $alignr PID   CPU%   MEM%${font sans-serif:normal:size=8}
${top name 1} $alignr ${top pid 1} ${top cpu 1}% ${top mem 1}%
${top name 2} $alignr ${top pid 2} ${top cpu 2}% ${top mem 2}%
${top name 3} $alignr ${top pid 3} ${top cpu 3}% ${top mem 3}%
${top name 4} $alignr ${top pid 4} ${top cpu 4}% ${top mem 4}%
${top name 5} $alignr ${top pid 5} ${top cpu 5}% ${top mem 5}%
${top name 6} $alignr ${top pid 6} ${top cpu 6}% ${top mem 6}%
${top name 7} $alignr ${top pid 7} ${top cpu 7}% ${top mem 7}%
${top name 8} $alignr ${top pid 8} ${top cpu 8}% ${top mem 8}%
${top name 9} $alignr ${top pid 9} ${top cpu 9}% ${top mem 9}%
${top name 10} $alignr ${top pid 10} ${top cpu 10}% ${top mem 10}%
${voffset 300}
]];
